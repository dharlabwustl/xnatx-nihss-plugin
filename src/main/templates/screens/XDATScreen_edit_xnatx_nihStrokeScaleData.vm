                    #end
                </td>
            </tr>
            <tr>
                <td colspan="2">#parse("/screens/EditProjectSpecificFields.vm")</td>
            </tr>
            <tr>
                <th>Date</th>
                <td width=94%>#xdatCalendar("xnatx:nihStrokeScaleData/date" $item $vr)</td>
            </tr>
            <tr>
                <th>Visit ID</th>
