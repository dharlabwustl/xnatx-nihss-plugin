    </tr>
    <tr>
        <td>
            <table width="100%">
            <tr>
            <td valign="top" colspan=2>
            <table>
            <tr>
                <td colspan='2'>
                    <input type="hidden" name="$om.getXSIType()/ID" id="$om.getXSIType()/ID" value="$!om.getId()"/>
                    #if($om.getId())
